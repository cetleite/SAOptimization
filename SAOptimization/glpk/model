set A;

#Parametros
param preco {i in A};
param lucro {i in A};
param capac {i in A};
param deman {i in A};

#Variavel
var x {i in A} integer, >= 0;	#numero de avioes i vendidos
var b {i in A} binary;

#Funcao objetivo
maximize lucroTotal:
	sum{i in A} (x[i] * lucro[i]) - sum{i in A} (b[i] * preco[i]);

#Restricoes
s.t. limite_capac:
	sum{i in A} (x[i] * capac[i]) <= 100;

s.t. limite_deman{i in A}:
	x[i] <= deman[i] * b[i];

