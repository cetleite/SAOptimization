set A;							#conjunto de nodos
set mediana;					#numero de facilidades que devem ser instaladas

#Parametros
param n1 {i in A};				#noh 1
param n2 {i in A};				#noh 2
param dist {i in A, j in A};	#custo de transporte de no 1 para no j

#Variavel
var a {i in A, j in A} binary;	#se facilidade no nodo i atende cliente no nodo j

#Funcao objetivo
minimize custoTotal:
	sum{i in A} sum{j in A}( a[i, j] * dist[i, j]);

#Restricoes
s.t. minimimo_instalacoes:				#se foram instaladas exatas 'medianas' facilidades
	sum{i in A} a[i, i] = mediana;

s.t. clientes_atendidos{i in A}:		#se todos os clientes foram atendidos por exatamente uma facilidade
	sum{j in A} a[i, j] = 1;
end;
